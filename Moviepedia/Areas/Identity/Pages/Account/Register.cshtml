@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h1 style="color: #a366ff">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="color: #a366ff">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <br />
            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-envelope icon" style="padding: 10px;min-width: 50px;text-align: center;background:#a366ff;color:white"></i>
                <input asp-for="Input.Email" class="form-control" placeholder="Email address" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger" style="white-space:pre-wrap"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-key icon" style="padding: 10px;min-width: 50px;text-align: center;background:#a366ff;color:white"></i>
                <input asp-for="Input.Password" class="form-control" placeholder="Password" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-key icon" style="padding: 10px;min-width: 50px;text-align: center;background:#a366ff;color:white"></i>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-user" style="padding: 10px;min-width: 50px;text-align: center;background:#a366ff;color:white"></i>
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-user" style="padding: 10px;min-width: 50px;text-align: center;background:#a366ff;color:white"></i>
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>

            <br />
            <button type="submit" class="btn" style="opacity:2;transition: 0.3s; background-color: #a366ff; color: white">Register</button
            <br />
        </form>
        <br />
        <p>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color:#a366ff;">Do you already have an account? Log in!</a>
        </p>
    </div>
</div>
<div style="position:relative; left:35vw;  top: -85vh; height: 10vh;">
        <img src="~/register.gif" style="width: 40vw !important;"/>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
